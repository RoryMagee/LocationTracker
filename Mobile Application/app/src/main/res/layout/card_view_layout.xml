<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/name"
                android:textSize="17dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/createdBy"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/location"
                android:layout_toRightOf="@+id/createdBy_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/createdBy_label"
                android:text="Created By: "
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/location"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completed"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/createdBy_label"
            android:layout_toRightOf="@+id/completed_label"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_label"
                android:text="Completed: "
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="62dp"
                android:layout_below="@+id/createdBy_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startDate"
                android:layout_alignParentTop="true"
                android:layout_marginTop="76dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/completed"
                android:layout_toRightOf="@+id/startDate_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startDate_label"
                android:text="Start Date: "
                android:layout_alignParentTop="true"
                android:layout_marginTop="76dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/completed_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endDate"
                android:layout_alignParentTop="true"
                android:layout_marginTop="92dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/startDate"
                android:layout_toRightOf="@+id/endDate_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endDate_label"
                android:text="End Date: "
                android:layout_alignParentTop="true"
                android:layout_marginTop="92dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/startDate_label"
                />

       </RelativeLayout>

    </android.support.v7.widget.CardView>








</LinearLayout>